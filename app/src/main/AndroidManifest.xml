<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.android.roomate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AuthenticationActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".activities.CreateProfile" />
        <activity android:name=".activities.SelectPreferences" />
        <activity android:name=".activities.ProfileScreen" />
        <activity android:name=".activities.SetupApartment" />
        <activity android:name=".activities.ApartmentPreferences" />
        <activity
            android:name=".activities.MainScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>